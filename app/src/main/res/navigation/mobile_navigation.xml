<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_feed">

    <fragment
        android:id="@+id/navigation_feed"
        android:name="com.example.myapplication.ui.home.EventFragment"
        android:label="@string/title_feeds"
        tools:layout="@layout/fragment_home" />

    <fragment
        android:id="@+id/navigation_notifications"
        android:name="com.example.myapplication.ui.dashboard.DashboardFragment"
        android:label="@string/title_notification"
        tools:layout="@layout/fragment_dashboard" />

    <fragment
        android:id="@+id/navigation_me"
        android:name="com.example.myapplication.ui.notifications.NotificationsFragment"
        android:label="@string/title_me"
        tools:layout="@layout/fragment_notifications" />
</navigation>